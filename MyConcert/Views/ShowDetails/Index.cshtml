@model IEnumerable<MyConcert.Models.ShowDetails>

@{
    ViewBag.Title = "Index";
}

<h2> An overview of all available concerts</h2>

<p>
    <span>@Html.ActionLink("Home", "Index", "Shows")</span>
</p>
<div class="row">
    @foreach (var item in Model)
    {
        <div class="container">
            <div class="row">
                <div class="col-sm-4">
                    
                    <h3>@Html.DisplayFor(modelItem => item.ArtistName)</h3>
                    <p>Genre: @Html.DisplayFor(modelItem => item.Genre)</p>
                </div>
                <div class="col-sm-4">
                    <h3>Details...</h3>
                    <p>Date: @Html.DisplayFor(modelItem => item.ShowDate)</p>
                    <p>Start Time: @Html.DisplayFor(modelItem => item.ShowStartTime)</p>
                    <p>
                       Description: @Html.DisplayFor(modelItem => item.Summary)
                    </p> 
                   <p>Duration: @Html.DisplayFor(modelItem => item.Duration)</p>
                
            </div>
            <div class="col-sm-4">
                <h3>Venue info..</h3>
                <p>Venue: @Html.DisplayFor(modelItem => item.VenueName)</p>
                
                <p>
                   <p>Are VIP tickets available?</p> @Html.DisplayFor(modelItem => item.IsVIPAvailable)
                <p>Are front row tickets available?</p>  @Html.DisplayFor(modelItem => item.IsFrontRowAvailable)
                <p>Is Tiered seating Available?</p>  @Html.DisplayFor(modelItem => item.IsTieredSeatingAvailable)
            </div>
        </div>
    </div> }
</div>